{
    "name": "inpsyde/assets",
    "description": "Package to manage assets in WordPress.",
    "type": "library",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Inpsyde",
            "email": "hello@inpsyde.com",
            "homepage": "https://inpsyde.com",
            "role": "Company"
        },
        {
            "name": "Christian Leucht",
            "email": "chris@chrico.info",
            "homepage": "https://www.chrico.info",
            "role": "Developer"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.2",
        "ext-json": "*",
        "ext-dom": "*",
        "inpsyde/wp-context": "^1"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "brain/monkey": "^2.5.0",
        "mikey179/vfsstream": "^1.6.8",
        "inpsyde/php-coding-standards": "^1",
        "symfony/process": "^4.4",
        "symfony/dotenv": "^4.4",
        "roots/wordpress": "@stable"
    },
    "autoload": {
        "psr-4": {
            "Inpsyde\\Assets\\": "src/"
        },
        "files": [
            "inc/functions.php",
            "inc/bootstrap.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Inpsyde\\Assets\\Tests\\Unit\\": "tests/phpunit/Unit/",
            "Inpsyde\\Assets\\Tests\\Integration\\": "tests/integration/"
        }
    },
    "scripts": {
        "cs": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs",
        "tests:integration": "@php ./vendor/phpunit/phpunit/phpunit -c phpunit-integration.xml.dist",
        "tests:unit": "@php ./vendor/phpunit/phpunit/phpunit",
        "tests:no-cov": "@php ./vendor/phpunit/phpunit/phpunit --no-coverage",
        "tests:codecov": "@php ./vendor/phpunit/phpunit/phpunit --coverage-clover coverage.xml",
        "tests": [
            "@tests:unit"
        ],
        "qa": [
            "@cs",
            "@tests:no-cov"
        ]
    },
    "config": {
        "optimize-autoloader": true
    },
    "extra": {
        "wordpress-install-dir": "vendor/wordpress/wordpress"
    }
}
